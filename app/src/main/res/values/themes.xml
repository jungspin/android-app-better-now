<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Better" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/dark_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/beige</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/beige</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/beige</item>

    </style>
    <!-- for popup activity-->
    <style name="Theme.mDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.AppCompat.NumberPicker"/>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <!-- 선택했을 때 내부 원 색상-->
        <item name ="colorAccent">@color/brown</item>
        <!-- 선택 안 됐을 때 테두리 색상-->
        <item name = "colorControlNormal">@color/brown</item>
    </style>

</resources>
